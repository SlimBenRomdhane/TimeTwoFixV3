@model TimeTwoFix.Web.Models.ProvidedServiceModels.DeleteProvidedServiceViewModel

@{
    ViewData["Title"] = "Delete Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h2 class="text-danger fw-bold mb-4">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> Delete Service
            </h2>
            <div class="alert alert-warning text-center fw-semibold mb-4" role="alert">
                <i class="bi bi-exclamation-circle me-2"></i>
                Are you sure you want to delete this service? This action cannot be undone.
            </div>
            <div class="mb-4">
                <h5 class="text-secondary fw-semibold border-bottom pb-2 mb-3">
                    <i class="bi bi-info-circle me-2"></i> Service Information
                </h5>
                <dl class="row">
                    <dt class="col-sm-3">Service ID</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9 fw-semibold">@Html.DisplayFor(model => model.Name)</dd>
                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
                    <dt class="col-sm-3">Estimated Time</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.EstimatedTime)</dd>
                    <dt class="col-sm-3">Price Per Hour</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.PricePerHour)</dd>
                    <dt class="col-sm-3">Category</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.DeleteCategoryViewModel.Name)</dd>
                    <dt class="col-sm-3">Notes</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Notes)</dd>
                </dl>
            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-start gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>