@model IEnumerable<TimeTwoFix.Web.Models.ProvidedServiceModels.ReadProvidedServiceViewModel>

@{
    ViewData["Title"] = "Provided Services";
}

<div class="container my-5">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-dark">
            <i class="bi bi-tools me-2"></i> Provided Services
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Create New
        </a>
    </div>

    <!-- Search Accordion -->
    <div class="accordion mb-4" id="searchAccordion">
        <div class="accordion-item">
            <h2 class="accordion-header" id="searchHeading">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#searchCollapse" aria-expanded="false" aria-controls="searchCollapse">
                    <i class="bi bi-search me-2"></i> Search Provided Services
                </button>
            </h2>
            <div id="searchCollapse" class="accordion-collapse collapse" aria-labelledby="searchHeading" data-bs-parent="#searchAccordion">
                <div class="accordion-body">
                    <form asp-action="SearchProvidedServices" method="get">
                        <div class="row g-2">
                            <div class="col-md-6">
                                <input type="text" name="searchTerm" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search by name or description..." />
                            </div>
                            <div class="col-auto">
                                <button type="submit" class="btn btn-outline-primary">
                                    <i class="bi bi-search"></i> Search
                                </button>
                            </div>
                            <div class="col-auto">
                                <a asp-action="SearchProvidedServices" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Reset
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- TempData Alert -->
    @if (TempData["ServiceError"] != null)
    {
        <div class="alert alert-warning d-flex align-items-center mb-4">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <span>@TempData["ServiceError"]</span>
        </div>
    }

    <!-- Provided Services Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle table-light mb-0">
                    <thead class="table-secondary">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.CategoryId)</th>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Description)</th>
                            <th>@Html.DisplayNameFor(model => model.EstimatedTime)</th>
                            <th>@Html.DisplayNameFor(model => model.PricePerHour)</th>
                            <th>@Html.DisplayNameFor(model => model.Notes)</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.ReadCategoryViewModel.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                <td>@Html.DisplayFor(modelItem => item.EstimatedTime)</td>
                                <td>@Html.DisplayFor(modelItem => item.PricePerHour)</td>
                                <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Details</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                <i class="bi bi-info-circle me-2"></i> No services found matching your search.
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>