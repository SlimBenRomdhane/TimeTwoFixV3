@model TimeTwoFix.Web.Models.ProviderModels.ReadProviderViewModel

@{
    ViewData["Title"] = "Provider Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h2 class="text-primary fw-bold mb-4">
                <i class="bi bi-truck me-2"></i> Provider Details
            </h2>
            <div class="row mb-4">
                <div class="col-md-6">
                    <label class="text-muted">Name</label>
                    <div class="fw-semibold">@Model.Name</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Contact Email</label>
                    <div>@Model.ContactEmail</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Mobile Phone</label>
                    <div>@Model.MobileContactPhone</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Landline</label>
                    <div>@Model.LandContactPhone</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Fax</label>
                    <div>@Model.Fax</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Address</label>
                    <div>@Model.Address</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">RIB</label>
                    <div>@Model.RIB</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Fiscal ID</label>
                    <div>@Model.FiscalId</div>
                </div>
            </div>
            <hr />
            <div class="row mb-4">
                <div class="col-md-6">
                    <label class="text-muted">Created At</label>
                    <div>@Model.CreatedAt</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Created By</label>
                    <div>@Model.CreatedBy</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Updated At</label>
                    <div>@Model.UpdatedAt</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Updated By</label>
                    <div>@Model.UpdatedBy</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Deleted At</label>
                    <div>@Model.DeletedAt</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Deleted By</label>
                    <div>@Model.DeletedBy</div>
                </div>
            </div>
            <div class="d-grid mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning btn-lg">
                    <i class="bi bi-pencil-square me-2"></i> Edit Provider
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-arrow-left-circle me-2"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
