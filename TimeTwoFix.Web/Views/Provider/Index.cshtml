@model IEnumerable<TimeTwoFix.Web.Models.ProviderModels.ReadProviderViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="table-responsive">
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.ContactEmail)</th>
                <th>@Html.DisplayNameFor(model => model.MobileContactPhone)</th>
                <th>@Html.DisplayNameFor(model => model.LandContactPhone)</th>
                <th>@Html.DisplayNameFor(model => model.Fax)</th>
                <th>@Html.DisplayNameFor(model => model.Address)</th>
                <th>@Html.DisplayNameFor(model => model.RIB)</th>
                <th>@Html.DisplayNameFor(model => model.FiscalId)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.ContactEmail)</td>
            <td>@Html.DisplayFor(modelItem => item.MobileContactPhone)</td>
            <td>@Html.DisplayFor(modelItem => item.LandContactPhone)</td>
            <td>@Html.DisplayFor(modelItem => item.Fax)</td>
            <td>@Html.DisplayFor(modelItem => item.Address)</td>
            <td>@Html.DisplayFor(modelItem => item.RIB)</td>
            <td>@Html.DisplayFor(modelItem => item.FiscalId)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1 mb-1">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1 mb-1">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger mb-1">Delete</a>
                <a asp-action="CreateBulk" asp-controller="ProviderSparePart" asp-route-providerId="@item.Id" class="btn btn-sm btn-outline-success mb-1">Add Spare Parts</a>
            </td>
        </tr>
}
        </tbody>
    </table>
</div>
