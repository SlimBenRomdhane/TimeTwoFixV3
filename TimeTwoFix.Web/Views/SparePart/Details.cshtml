@model TimeTwoFix.Web.Models.SparePartModels.ReadSparePartViewModel

@{
    ViewData["Title"] = "Spare Part Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h2 class="text-primary fw-bold mb-4">
                <i class="bi bi-gear me-2"></i> Spare Part Details
            </h2>
            <div class="row mb-4">
                <div class="col-md-6">
                    <label class="text-muted">Part Code</label>
                    <div class="fw-semibold">@Model.PartCode</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Name</label>
                    <div>@Model.Name</div>
                </div>
                <div class="col-md-12">
                    <label class="text-muted">Description</label>
                    <div>@Model.Description</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Unit Price</label>
                    <div>@Model.UnitPrice</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Quantity In Stock</label>
                    <div>@Model.QuantityInStock</div>
                </div>
            </div>
            <div class="d-grid mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning btn-lg">
                    <i class="bi bi-pencil-square me-2"></i> Edit Spare Part
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-arrow-left-circle me-2"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
