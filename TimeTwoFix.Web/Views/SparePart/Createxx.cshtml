@model TimeTwoFix.Web.Models.SparePartModels.CreateSparePartViewModel
@{
    ViewData["Title"] = "Create Spare Part";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2><i class="fas fa-cog"></i> Create New Spare Part</h2>
            <p class="text-muted">Add a new spare part to your inventory</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- 🔍 SMART CATEGORY SEARCH - NO JAVASCRIPT -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-search"></i> Step 1: Find & Select Category
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Search Form -->
                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label class="form-label font-weight-bold">Search Categories:</label>
                                <form method="get" asp-action="Create" class="d-inline-block w-100">
                                    <div class="input-group">
                                        <input type="text"
                                               name="categorySearch"
                                               value="@ViewBag.CategorySearch"
                                               class="form-control"
                                               placeholder="Type brake, engine, electrical, etc... (min 2 characters)"
                                               autocomplete="off" />
                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-search"></i> Search
                                            </button>
                                        </div>
                                    </div>

                                    <!-- Preserve form data during search -->
                                    <input type="hidden" name="PartCode" value="@Model.PartCode" />
                                    <input type="hidden" name="Name" value="@Model.Name" />
                                    <input type="hidden" name="Description" value="@Model.Description" />
                                </form>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">&nbsp;</label>
                                <div>
                                    @if (!string.IsNullOrEmpty(ViewBag.CategorySearch as string))
                                    {
                                        <a asp-action="Create" class="btn btn-secondary">
                                            <i class="fas fa-times"></i> Clear Search
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Search Results or Popular Categories -->
                        @if (!string.IsNullOrEmpty(ViewBag.CategorySearch as string))
                        {
                            <h6>Search Results for "@ViewBag.CategorySearch":</h6>

                            @if (Model.AvailableCategories?.Any() == true)
                            {
                                <div class="list-group mb-3" style="max-height: 300px; overflow-y: auto;">
                                    @foreach (var category in Model.AvailableCategories)
                                    {
                                        <button type="button"
                                                class="list-group-item list-group-item-action d-flex justify-content-between align-items-start @(Model.SparePartCategoryId == category.Id ? "active" : "")"
                                                onclick="selectCategory(@category.Id, '@Html.Raw(category.Name.Replace("'", "\\'"))')">
                                            <div class="ms-2 me-auto">
                                                <div class="fw-bold">@category.Name</div>
                                                @if (!string.IsNullOrEmpty(category.Description))
                                                {
                                                    <small class="text-muted">@category.Description</small>
                                                }
                                            </div>
                                            <span class="badge @(category.UsageCount > 20 ? "bg-success" : category.UsageCount > 5 ? "bg-info" : "bg-secondary")">
                                                @category.UsageCount parts
                                            </span>
                                        </button>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    <i class="fas fa-exclamation-triangle"></i>
                                    No categories found matching "@ViewBag.CategorySearch".
                                    <strong>Try different keywords</strong> like: brake, engine, electrical, body, fluid, etc.
                                </div>
                            }
                        }
                        else
                        {
                            <!-- Show popular categories initially (limit to top 10) -->
                            <h6>Popular Categories (or search above):</h6>
                            @if (Model.AvailableCategories?.Any() == true)
                            {
                                <div class="row">
                                    @foreach (var category in Model.AvailableCategories.Take(10))
                                    {
                                        <div class="col-md-6 mb-2">
                                            <button type="button"
                                                    class="btn @(Model.SparePartCategoryId == category.Id ? "btn-primary" : "btn-outline-secondary") w-100 text-left"
                                                    onclick="selectCategory(@category.Id, '@Html.Raw(category.Name.Replace("'", "\\'"))')">
                                                <div class="d-flex justify-content-between">
                                                    <span>@category.Name</span>
                                                    <small class="text-muted">@category.UsageCount</small>
                                                </div>
                                            </button>
                                        </div>
                                    }
                                </div>

                                @if (Model.AvailableCategories.Count > 10)
                                {
                                    <small class="text-muted">
                                        Showing top 10 popular categories. Use search above to find from all @Model.AvailableCategories.Count categories.
                                    </small>
                                }
                            }
                        }

                        <!-- Selected Category Display -->
                        @if (Model.SparePartCategoryId > 0)
                        {
                            var selectedCategory = Model.AvailableCategories?.FirstOrDefault(c => c.Id == Model.SparePartCategoryId);
                            if (selectedCategory != null)
                            {
                                <div class="alert alert-success mt-3">
                                    <strong><i class="fas fa-check-circle"></i> Selected Category:</strong>
                                    @selectedCategory.Name
                                    @if (!string.IsNullOrEmpty(selectedCategory.Description))
                                    {
                                        <br>
                            
                                        <small class="text-muted">@selectedCategory.Description</small>
                                    }
                                </div>
                            }
                        }

                        <!-- Hidden field for selected category -->
                        <input asp-for="SparePartCategoryId" type="hidden" />
                        <span asp-validation-for="SparePartCategoryId" class="text-danger"></span>
                    </div>
                </div>

                <!-- 🎯 SPARE PART DETAILS -->
                <div class="card">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-info-circle"></i> Step 2: Part Details
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <!-- Part Code -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="PartCode" class="control-label font-weight-bold">
                                        <i class="fas fa-barcode"></i> Part Code
                                    </label>
                                    <input asp-for="PartCode" class="form-control" placeholder="e.g., BRK-001" />
                                    <span asp-validation-for="PartCode" class="text-danger"></span>
                                    <small class="form-text text-muted">Unique identifier for this part</small>
                                </div>
                            </div>

                            <!-- Part Name -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label font-weight-bold">
                                        <i class="fas fa-tag"></i> Part Name
                                    </label>
                                    <input asp-for="Name" class="form-control" placeholder="e.g., Brake Disc Rotor" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="form-group">
                            <label asp-for="Description" class="control-label font-weight-bold">
                                <i class="fas fa-align-left"></i> Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="3"
                                      placeholder="Detailed description of the spare part..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            

                            
                        </div>
                    </div>
                </div>

                <!-- 🎯 ACTION BUTTONS -->
                <div class="mt-4">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-plus-circle"></i> Create Spare Part
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg ml-2">
                        <i class="fas fa-list"></i> Back to List
                    </a>
                </div>
            </form>
        </div>

        <!-- 🎯 HELP SIDEBAR -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-lightbulb"></i> Search Tips
                    </h5>
                </div>
                <div class="card-body">
                    <h6>Try searching for:</h6>
                    <ul class="small">
                        <li><strong>brake</strong> - brake pads, discs, fluid</li>
                        <li><strong>engine</strong> - spark plugs, filters, oil</li>
                        <li><strong>electrical</strong> - wiring, batteries, lights</li>
                        <li><strong>body</strong> - panels, mirrors, trim</li>
                        <li><strong>suspension</strong> - shocks, springs</li>
                    </ul>

                    <hr>

                    <h6>Category Selection:</h6>
                    <ul class="small">
                        <li>🔥 <strong>Popular categories</strong> show first</li>
                        <li>🔍 <strong>Search</strong> finds exact matches</li>
                        <li>✅ <strong>Click to select</strong> any category</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Minimal JavaScript ONLY for UI selection (can be removed if needed) -->
<script>
    function selectCategory(categoryId, categoryName) {
        // Update hidden field
        document.querySelector('input[name="SparePartCategoryId"]').value = categoryId;

        // Update button states
        document.querySelectorAll('.list-group-item-action').forEach(item => {
            item.classList.remove('active');
        });
        document.querySelectorAll('button[onclick*="selectCategory"]').forEach(btn => {
            btn.classList.remove('btn-primary');
            btn.classList.add('btn-outline-secondary');
        });

        // Highlight selected
        event.target.closest('button').classList.add(event.target.closest('.list-group-item-action') ? 'active' : 'btn-primary');
        if (!event.target.closest('.list-group-item-action')) {
            event.target.closest('button').classList.remove('btn-outline-secondary');
        }
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}