@model IEnumerable<TimeTwoFix.Web.Models.ClientModels.ReadClientViewModel>

@{
    ViewData["Title"] = "Clients List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <!-- Section Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="section-title text-primary fw-bold">
            <i class="bi bi-person-lines-fill me-2"></i> Clients Management
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Add New Client
        </a>
    </div>

    <!-- Search Accordion -->
    <div class="accordion mb-4" id="clientFilterAccordion">
        <div class="accordion-item border-0 shadow-sm">
            <h2 class="accordion-header" id="filterHeading">
                <button class="accordion-button collapsed fw-semibold" type="button"
                        data-bs-toggle="collapse" data-bs-target="#filterCollapse"
                        aria-expanded="false" aria-controls="filterCollapse">
                    <i class="bi bi-funnel-fill me-2 text-primary"></i> Filter Clients
                </button>
            </h2>
            <div id="filterCollapse" class="accordion-collapse collapse" aria-labelledby="filterHeading"
                 data-bs-parent="#clientFilterAccordion">
                <div class="accordion-body">
                    <form asp-action="Index" method="post" class="row gy-4">
                        <div class="col-md-3">
                            <label for="searchName" class="form-label fw-semibold text-secondary">Name</label>
                            <input type="text" name="searchName" id="searchName" class="form-control" placeholder="Search by name...">
                        </div>
                        <div class="col-md-3">
                            <label for="searchPhone" class="form-label fw-semibold text-secondary">Phone</label>
                            <input type="text" name="searchPhone" id="searchPhone" class="form-control" placeholder="Search by phone...">
                        </div>
                        <div class="col-md-3">
                            <label for="searchEmail" class="form-label fw-semibold text-secondary">Email</label>
                            <input type="text" name="searchEmail" id="searchEmail" class="form-control" placeholder="Search by email...">
                        </div>
                        <div class="col-md-3 d-flex flex-column justify-content-end gap-2">
                            <button type="submit" class="btn btn-outline-primary">
                                <i class="bi bi-search me-1"></i> Search
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i> Reset
                            </a>
                            @if (User.IsInRole("GeneralManager"))
                            {
                                <a asp-action="LoadDeleted" class="btn btn-outline-danger">
                                    <i class="bi bi-trash me-1"></i> Show Deleted
                                </a>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- TempData Alert -->
    @if (TempData["ClientError"] != null)
    {
        <div class="alert alert-warning d-flex align-items-center mb-4">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <span>@TempData["ClientError"]</span>
        </div>
    }

    <!-- Clients Cards -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-primary fw-bold">
                            <i class="bi bi-person-circle me-1"></i> @item.FirstName @item.LastName
                        </h5>
                        <p class="card-text mb-2">
                            <span class="fw-semibold text-muted">Phone:</span> <span class="text-info">@item.PhoneNumber</span><br />
                            <span class="fw-semibold text-muted">Email:</span> <span class="text-info">@item.Email</span><br />
                            <span class="fw-semibold text-muted">City:</span> @item.City
                        </p>
                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">Edit</a>
                            @if (User.IsInRole("GeneralManager"))
                            {
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>