@model TimeTwoFix.Web.Models.VehicleModels.CreateVehicleViewModel

@{
    ViewData["Title"] = "Create Vehicle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <!-- Header -->
    <h2 class="section-title text-primary fw-bold mb-2">
        <i class="bi bi-car-front me-2"></i> Create Vehicle
    </h2>
    <p class="text-muted mb-4">
        Please fill in the vehicle details. Fields marked with <span class="text-danger">*</span> are required.
    </p>
    <!-- Form Card -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="Create" class="needs-validation" novalidate>
                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <!-- Section: Vehicle Info -->
                <div class="form-section mb-5">
                    <h5 class="form-section-header text-secondary mb-3">
                        <i class="bi bi-truck-front me-2"></i> Vehicle Details
                    </h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="ClientId" class="form-label">Client <span class="text-danger">*</span></label>
                            <select asp-for="ClientId" class="form-select" asp-items="ViewBag.Clients">
                                <option value="">-- Select Client --</option>
                            </select>
                            <span asp-validation-for="ClientId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Vin" class="form-label">VIN <span class="text-danger">*</span></label>
                            <input asp-for="Vin" class="form-control" maxlength="17" minlength="17" pattern="^[A-HJ-NPR-Z0-9]{17}$" title="VIN must be exactly 17 characters and exclude I, O, and Q."
                                   onblur="checkVinExistence(this.value)" />
                            <span asp-validation-for="Vin" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Brand" class="form-label">Brand <span class="text-danger">*</span></label>
                            <input asp-for="Brand" class="form-control" />
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Model" class="form-label">Model <span class="text-danger">*</span></label>
                            <input asp-for="Model" class="form-control" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LicensePlate" class="form-label">License Plate <span class="text-danger">*</span></label>
                            <input asp-for="LicensePlate" class="form-control" />
                            <span asp-validation-for="LicensePlate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="FuelType" class="form-label">Fuel Type <span class="text-danger">*</span></label>
                            <select asp-for="FuelType" class="form-select" asp-items="ViewBag.FuelTypes">
                                <option value="">-- Select Fuel Type --</option>
                            </select>
                            <span asp-validation-for="FuelType" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="TransmissionType" class="form-label">Transmission Type <span class="text-danger">*</span></label>
                            <select asp-for="TransmissionType" class="form-select" asp-items="ViewBag.TransmissionTypes">
                                <option value="">-- Select Transmission Type --</option>
                            </select>
                            <span asp-validation-for="TransmissionType" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Year" class="form-label">Year <span class="text-danger">*</span></label>
                            <input asp-for="Year" class="form-control" />
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Mileage" class="form-label">Mileage <span class="text-danger">*</span></label>
                            <input asp-for="Mileage" class="form-control" />
                            <span asp-validation-for="Mileage" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label asp-for="Notes" class="form-label">Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Extra notes or hints (optional)"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <!-- Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-check-circle me-1"></i> Create Vehicle
                    </button>
                </div>
            </form>
        </div>
    </div>
    <!-- Back Link -->
    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to Vehicle List
        </a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function checkVinExistence(vin) {
            fetch(`/Vehicle/CheckVinExistence?vin=${encodeURIComponent(vin)}`)
                .then(response => response.json())
                .then(exists => {
                    const form = document.querySelector("form");
                    const vinInput = document.querySelector('[name="Vin"]');
                    const otherInputs = form.querySelectorAll("input, select, textarea, button");

                    otherInputs.forEach(input => {
                        if (input !== vinInput) {
                            input.disabled = exists;
                        }
                    });

                    if (exists) {
                        alert("This VIN already exists in the system.");
                    }
                })
                .catch(error => console.error("VIN check failed:", error));
        }
    </script>
}