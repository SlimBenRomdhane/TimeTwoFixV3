@model TimeTwoFix.Web.Models.VehicleModels.UpdateVehicleViewModel

@{
    ViewData["Title"] = "Edit Vehicle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-5 justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title text-center">@ViewData["Title"]</h2>
                <hr />
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="ClientId" class="form-label fw-semibold text-secondary"></label>
                            <select asp-for="ClientId" asp-items="ViewBag.Clients" class="form-select"></select>
                            <span asp-validation-for="ClientId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Vin" class="form-label fw-semibold text-secondary"></label>
                            <input asp-for="Vin" class="form-control" />
                            <span asp-validation-for="Vin" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Brand" class="form-label fw-semibold text-secondary"></label>
                            <input asp-for="Brand" class="form-control" />
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Model" class="form-label fw-semibold text-secondary"></label>
                            <input asp-for="Model" class="form-control" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LicensePlate" class="form-label fw-semibold text-secondary"></label>
                            <input asp-for="LicensePlate" class="form-control" />
                            <span asp-validation-for="LicensePlate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="FuelType" class="form-label fw-semibold text-secondary"></label>
                            <select asp-for="FuelType" asp-items="ViewBag.FuelTypes" class="form-select"></select>
                            <span asp-validation-for="FuelType" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="TransmissionType" class="form-label fw-semibold text-secondary"></label>
                            <select asp-for="TransmissionType" asp-items="ViewBag.TransmissionTypes" class="form-select"></select>
                            <span asp-validation-for="TransmissionType" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Year" class="form-label fw-semibold text-secondary"></label>
                            <input asp-for="Year" class="form-control" />
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Mileage" class="form-label fw-semibold text-secondary"></label>
                            <input asp-for="Mileage" class="form-control" />
                            <span asp-validation-for="Mileage" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label asp-for="Notes" class="form-label fw-semibold text-secondary"></label>
                            <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save me-2"></i> Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-arrow-left-circle me-2"></i> Back to Vehicle List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}