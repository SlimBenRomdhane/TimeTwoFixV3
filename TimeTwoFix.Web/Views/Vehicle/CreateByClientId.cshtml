@model TimeTwoFix.Web.Models.VehicleModels.CreateVehicleViewModel

@{
    ViewData["Title"] = "Create Vehicle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-5 justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title text-center">@ViewData["Title"]</h2>
                <hr />
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="row g-3">
                        <input asp-for="ClientId" type="hidden" />
                        <div class="col-md-6">
                            <label asp-for="Vin" class="form-label fw-semibold text-secondary"></label>
                            <input asp-for="Vin" class="form-control"
                                   maxlength="17" minlength="17"
                                   pattern="^[A-HJ-NPR-Z0-9]{17}$"
                                   title="VIN must be exactly 17 characters and exclude I, O, and Q." />
                            <span asp-validation-for="Vin" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Brand" class="form-label fw-semibold text-secondary"></label>
                            <input asp-for="Brand" class="form-control" />
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Model" class="form-label fw-semibold text-secondary"></label>
                            <input asp-for="Model" class="form-control" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LicensePlate" class="form-label fw-semibold text-secondary"></label>
                            <input asp-for="LicensePlate" class="form-control" />
                            <span asp-validation-for="LicensePlate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="FuelType" class="form-label fw-semibold text-secondary"></label>
                            <select asp-for="FuelType" class="form-select" asp-items="ViewBag.FuelTypes">
                                <option value="">-- Select Fuel Type --</option>
                            </select>
                            <span asp-validation-for="FuelType" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="TransmissionType" class="form-label fw-semibold text-secondary"></label>
                            <select asp-for="TransmissionType" class="form-select" asp-items="ViewBag.TransmissionTypes">
                                <option value="">-- Select Transmission Type --</option>
                            </select>
                            <span asp-validation-for="TransmissionType" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Year" class="form-label fw-semibold text-secondary"></label>
                            <input asp-for="Year" class="form-control" />
                            <span asp-validation-for="Year" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Mileage" class="form-label fw-semibold text-secondary"></label>
                            <input asp-for="Mileage" class="form-control" />
                            <span asp-validation-for="Mileage" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label asp-for="Notes" class="form-label fw-semibold text-secondary"></label>
                            <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-plus-circle me-2"></i> Create Vehicle
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-arrow-left-circle me-2"></i> Back to Vehicle List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}