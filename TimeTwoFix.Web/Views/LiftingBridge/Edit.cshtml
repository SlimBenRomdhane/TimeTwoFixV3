@model TimeTwoFix.Web.Models.LiftingBridgeModels.UpdateLiftingBridgeViewModel

@{
    ViewData["Title"] = "Edit Lifting Bridge";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h2 class="text-primary fw-bold mb-4">
                <i class="bi bi-pencil-square me-2"></i> Edit Lifting Bridge
            </h2>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input asp-for="Id" type="hidden" />
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label">Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Location" class="form-label">Location</label>
                        <input asp-for="Location" class="form-control" />
                        <span asp-validation-for="Location" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="InstallationDate" class="form-label">Installation Date</label>
                        <input asp-for="InstallationDate" class="form-control" type="date" />
                        <span asp-validation-for="InstallationDate" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label">Status</label>
                        <select asp-for="Status" class="form-select" asp-items="ViewBag.BridgeStatus">
                            <option value="">-- Select Bridge Status --</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LoadCapacity" class="form-label">Load Capacity</label>
                        <input asp-for="LoadCapacity" class="form-control" />
                        <span asp-validation-for="LoadCapacity" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Type" class="form-label">Type</label>
                        <input asp-for="Type" class="form-control" />
                        <span asp-validation-for="Type" class="text-danger small"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Notes" class="text-danger small"></span>
                    </div>
                </div>
                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-save me-1"></i> Save Changes
                    </button>
                </div>
            </form>
            <div class="d-grid mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-arrow-left-circle me-2"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
