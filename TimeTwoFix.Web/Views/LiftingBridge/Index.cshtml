@model IEnumerable<TimeTwoFix.Web.Models.LiftingBridgeModels.ReadLiftingBridgeViewModel>

@{
    ViewData["Title"] = "Lifting Bridges";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">
            <i class="bi bi-gear-wide-connected me-2"></i> Lifting Bridges
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Create New
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Location</th>
                            <th>Installed</th>
                            <th>Status</th>
                            <th>Capacity</th>
                            <th>Type</th>
                            <th>Notes</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Location</td>
                                <td>@item.InstallationDate.ToString("dd MMM yyyy")</td>

                                <!-- Status Badge -->
                                <td>
                                    <span class="badge bg-@(item.Status == "Operational" ? "success" : "secondary")">@item.Status</span>
                                </td>

                                <td>@item.LoadCapacity</td>
                                <td>@item.Type</td>
                                <td class="text-truncate" style="max-width: 150px;">@item.Notes</td>

                                <!-- Action Buttons -->
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-warning" })
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-outline-info" })

                                        @if (User.IsInRole("GeneralManager"))
                                        {
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>