@model IEnumerable<TimeTwoFix.Web.Models.CategoryModels.ReadCategoryViewModel>

@{
    ViewData["Title"] = "Categories";
}

<div class="container my-5">

    <!-- Section Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="section-title text-primary fw-bold">
            <i class="bi bi-tags me-2"></i> All Categories
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Create New
        </a>
    </div>

    <!-- Search Accordion -->
    <div class="accordion mb-4" id="searchAccordion">
        <div class="accordion-item">
            <h2 class="accordion-header" id="searchHeading">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#searchCollapse" aria-expanded="false" aria-controls="searchCollapse">
                    <i class="bi bi-search me-2"></i> Search Categories
                </button>
            </h2>
            <div id="searchCollapse" class="accordion-collapse collapse" aria-labelledby="searchHeading" data-bs-parent="#searchAccordion">
                <div class="accordion-body">
                    <form asp-action="SearchCategories" method="get">
                        <div class="row g-2">
                            <div class="col-md-6">
                                <input type="text" name="searchTerm" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search by name or description..." />
                            </div>
                            <div class="col-auto">
                                <button type="submit" class="btn btn-outline-primary">
                                    <i class="bi bi-search"></i> Search
                                </button>
                            </div>
                            <div class="col-auto">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Reset
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- TempData Alert -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-warning d-flex align-items-center mb-4">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <span>@TempData["ErrorMessage"]</span>
        </div>
    }

    <!-- Categories Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Notes</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Notes</td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-warning" })
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-outline-info" })
                                    @if (User.IsInRole("GeneralManager"))
                                    {
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>