@model TimeTwoFix.Web.Models.ProviderSparePartModels.DeleteProviderSparePartViewModel

@{
    ViewData["Title"] = "Delete Provider Spare Part";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h2 class="text-danger fw-bold mb-4">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> Delete Provider Spare Part
            </h2>
            <div class="alert alert-warning text-center fw-semibold mb-4" role="alert">
                <i class="bi bi-exclamation-circle me-2"></i>
                Are you sure you want to delete this provider spare part? This action cannot be undone.
            </div>
            <div class="mb-4">
                <h5 class="text-secondary fw-semibold border-bottom pb-2 mb-3">
                    <i class="bi bi-info-circle me-2"></i> Provider Spare Part Information
                </h5>
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Id)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ProviderId)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.ProviderId)</dd>
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.SparePartId)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.SparePartId)</dd>
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DeliveryReceipt)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.DeliveryReceipt)</dd>
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.QuantityReceived)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.QuantityReceived)</dd>
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DateReceived)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.DateReceived)</dd>
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.UnitPriceAtPurchase)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.UnitPriceAtPurchase)</dd>
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Discount)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Discount)</dd>
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.VAT)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.VAT)</dd>
                    <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Margin)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Margin)</dd>
                </dl>
            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-start gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
