@model TimeTwoFix.Web.Models.ProviderSparePartModels.ReadProviderSparePartViewModel

@{
    ViewData["Title"] = "Provider Spare Part Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h2 class="text-primary fw-bold mb-4">
                <i class="bi bi-box-seam me-2"></i> Provider Spare Part Details
            </h2>
            <div class="row mb-4">
                <div class="col-md-6">
                    <label class="text-muted">Provider</label>
                    <div class="fw-semibold">@Model.ProviderId</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Spare Part</label>
                    <div class="fw-semibold">@Model.SparePartId</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Delivery Receipt</label>
                    <div>@Model.DeliveryReceipt</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Quantity Received</label>
                    <div>@Model.QuantityReceived</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Date Received</label>
                    <div>@Model.DateReceived</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Unit Price at Purchase</label>
                    <div>@Model.UnitPriceAtPurchase</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Discount</label>
                    <div>@Model.Discount</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">VAT</label>
                    <div>@Model.VAT</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Margin</label>
                    <div>@Model.Margin</div>
                </div>
            </div>
            <div class="d-grid mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning btn-lg">
                    <i class="bi bi-pencil-square me-2"></i> Edit Provider Spare Part
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-arrow-left-circle me-2"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
