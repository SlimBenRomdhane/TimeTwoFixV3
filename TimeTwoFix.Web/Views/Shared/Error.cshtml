@{
    var errorTitle = TempData["ErrorTitle"] as string ?? "Error";
    var errorMessage = TempData["ErrorMessage"] as string ?? "An error occurred while processing your request.";
    var errorCode = TempData["ErrorCode"] as string;
    var showRequestId = TempData["ShowRequestId"] as bool? ?? false;
    var requestId = TempData["RequestId"] as string;
    var validationErrors = TempData["ValidationErrors"] as Dictionary<string, string[]>;
    var showHomeLink = TempData["ShowHomeLink"] as bool? ?? true;
    var returnUrl = TempData["ReturnUrl"] as string;
    var returnLinkText = TempData["ReturnLinkText"] as string ?? "Go Back";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @errorTitle
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5 class="alert-heading">@errorMessage</h5>
                    </div>

                    @if (validationErrors != null && validationErrors.Count > 0)
                    {
                        <div class="alert alert-warning">
                            <h6>Please correct the following errors:</h6>
                            <ul class="mb-0">
                                @foreach (var error in validationErrors)
                                {
                                    foreach (var errorMsg in error.Value)
                                    {
                                        <li>@error.Key: @errorMsg</li>
                                    }
                                }
                            </ul>
                        </div>
                    }

                    @if (showRequestId && !string.IsNullOrEmpty(requestId))
                    {
                        <div class="alert alert-info">
                            <small>
                                <strong>Request ID:</strong> <code>@requestId</code>
                            </small>
                        </div>
                    }

                    @if (showHomeLink)
                    {
                        <div class="mt-4">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                                <i class="fas fa-home me-2"></i>Go to Home
                            </a>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(returnUrl))
                    {
                        <div class="mt-2">
                            <a href="@returnUrl" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>@returnLinkText
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
