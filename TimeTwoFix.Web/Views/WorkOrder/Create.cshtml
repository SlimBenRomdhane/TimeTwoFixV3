@model TimeTwoFix.Web.Models.WorkOrderModels.CreateWorkOrderViewModel
@{
    ViewData["Title"] = "Create Work Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <!-- Header -->
    <h2 class="section-title text-primary fw-bold mb-2">
        <i class="bi bi-file-earmark-plus me-2"></i> Create Work Order
    </h2>
    <p class="text-muted mb-4">
        Please fill in the work order details. Fields marked with <span class="text-danger">*</span> are required.
    </p>
    <!-- Form Card -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="Create" class="needs-validation" novalidate>
                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <!-- Section: Work Order Info -->
                <div class="form-section mb-5">
                    <h5 class="form-section-header text-secondary mb-3">
                        <i class="bi bi-clipboard2-plus me-2"></i> Work Order Details
                    </h5>
                    <div class="mb-3">
                        <label class="form-label">Vehicle <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <input type="text" id="SelectedVehicleVin" class="form-control" placeholder="No vehicle selected" readonly />
                            <input type="hidden" asp-for="VehicleId" id="VehicleId" />
                            <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#vehicleModal">
                                🔍 Search Vehicle
                            </button>
                        </div>
                        <span asp-validation-for="VehicleId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Mileage" class="form-label">Mileage <span class="text-danger">*</span></label>
                        <input asp-for="Mileage" class="form-control" />
                        <span asp-validation-for="Mileage" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Extra notes or hints (optional)"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                </div>
                <!-- Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-check-circle me-1"></i> Create Work Order
                    </button>
                </div>
            </form>
        </div>
    </div>
    <!-- Back Link -->
    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to Work Order List
        </a>
    </div>
</div>
<!-- Vehicle Search Modal -->
<div class="modal fade" id="vehicleModal" tabindex="-1" aria-labelledby="vehicleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="vehicleModalLabel">Search Vehicles</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="text" id="vehicleSearchInput" class="form-control" placeholder="Type VIN or plate..." />
                <div id="vehicleResults" class="mt-3"></div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        let vehicleSearchTimer;
        document.getElementById("vehicleSearchInput").addEventListener("input", function () {
            clearTimeout(vehicleSearchTimer);
            const term = this.value;
            if (term.length < 2) return;
            vehicleSearchTimer = setTimeout(async () => {
                const container = document.getElementById("vehicleResults");
                container.innerHTML = `<div class="text-muted">Searching...</div>`;
                const response = await fetch(`/WorkOrder/SearchVehicles?term=${encodeURIComponent(term)}`);
                const results = await response.json();
                container.innerHTML = "";
                if (results.length === 0) {
                    container.innerHTML = `<div class="alert alert-warning">No vehicles found matching "<strong>${term}</strong>".</div>`;
                    return;
                }
                results.forEach(v => {
                    const btn = document.createElement("button");
                    btn.className = "btn btn-outline-primary mb-2 w-100 text-start";
                    btn.textContent = `${v.vin} – ${v.plateNumber || "No plate"}`;
                    btn.onclick = () => {
                        document.getElementById("VehicleId").value = v.id;
                        document.getElementById("SelectedVehicleVin").value = v.vin;
                        bootstrap.Modal.getInstance(document.getElementById("vehicleModal")).hide();
                    };
                    container.appendChild(btn);
                });
            }, 300);
        });
    </script>
}