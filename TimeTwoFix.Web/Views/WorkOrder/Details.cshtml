@model TimeTwoFix.Web.Models.WorkOrderModels.ReadWorkOrderViewModel

@{
    ViewData["Title"] = "Work Order Details";
}

<div class="row mt-5 justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title text-center">
                    <i class="fas fa-tools me-2"></i> Work Order Summary
                </h2>

                <!-- Vehicle Info -->
                <h5 class="text-dark mb-3">
                    <i class="fas fa-car me-1"></i> Vehicle Info
                </h5>

                @if (Model.VehicleViewModel != null)
                {
                    <div class="row gy-2 mb-4">
                        <div class="col-md-6">
                            <label class="text-muted">VIN</label>
                            <div class="fw-semibold">@Model.VehicleViewModel.Vin</div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted">License Plate</label>
                            <div class="fw-semibold">@Model.VehicleViewModel.LicensePlate</div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted">Brand</label>
                            <div>@Model.VehicleViewModel.Brand</div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted">Model</label>
                            <div>@Model.VehicleViewModel.Model</div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-1"></i> Vehicle details are not available.
                    </div>
                }

                <hr />

                <!-- Work Order Details -->
                <h5 class="text-dark mb-3">
                    <i class="fas fa-clipboard-list me-1"></i> Work Order Details
                </h5>
                <div class="row gy-2 mb-4">
                    <div class="col-md-6">
                        <label class="text-muted">Mileage</label>
                        <div>@Model.Mileage</div>
                    </div>
                    <div class="col-md-6">
                        <label class="text-muted">Labor Cost</label>
                        <div>@($"{Model.TolalLaborCost:N3} TND")</div>
                    </div>
                    <div class="col-md-12">
                        <label class="text-muted">Notes</label>
                        <div>@Model.Notes ?? "—"</div>
                    </div>
                </div>

                <hr />

                <!-- Status -->
                <h5 class="text-dark mb-3">
                    <i class="fas fa-info-circle me-1"></i> Status
                </h5>
                <div class="row gy-2 mb-4">
                    <div class="col-md-6">
                        <label class="text-muted">Status</label>
                        <span class="badge badge-status rounded-pill px-3 py-2" title="Work order status">
                            @Model.Status
                        </span>
                    </div>
                </div>

                <!-- Interventions -->
                @if (Model.InterventionViewModels != null && Model.InterventionViewModels.Any())
                {
                    <hr />
                    <h5 class="text-dark mb-3">
                        <i class="fas fa-wrench me-1"></i> Related Interventions
                    </h5>

                    <div class="table-responsive mb-4">
                        <table class="table table-bordered table-hover align-middle text-center">
                            <thead class="table-light">
                                <tr class="align-middle">
                                    <th scope="col">#</th>
                                    <th scope="col">Service</th>
                                    <th scope="col">Technician</th>
                                    <th scope="col">Start</th>
                                    <th scope="col">End</th>
                                    <th scope="col">Cost</th>
                                    <th scope="col">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var iv in Model.InterventionViewModels)
                                {
                                    <tr>
                                        @if (iv.Status != "Completed")
                                        {
                                            <td>
                                                <a asp-controller="Intervention"
                                                   asp-action="Edit"
                                                   asp-route-id="@iv.Id"
                                                   class="text-decoration-none fw-semibold">
                                                    @iv.Id
                                                </a>
                                            </td>
                                        }
                                        else
                                        {
                                            <td>@iv.Id</td>
                                        }                                        

                                        <td>
                                            @if (!string.IsNullOrEmpty(iv.ProvidedService?.Name))
                                            {
                                                <span>@iv.ProvidedService.Name</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">[no service]</span>
                                            }
                                        </td>

                                        <td>
                                            @if (!string.IsNullOrEmpty(iv.UserViewModel?.FirstName))
                                            {
                                                <span>@iv.UserViewModel.FirstName</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">[no tech]</span>
                                            }
                                        </td>

                                        <td>
                                            <span class="text-nowrap" title="Start time">
                                                @iv.StartDate.ToString("yyyy-MM-dd")<br />
                                                <small class="text-muted">@iv.StartDate.ToString("HH:mm")</small>
                                            </span>
                                        </td>

                                        <td>
                                            @if (iv.EndDate.HasValue)
                                            {
                                                <span class="text-nowrap" title="End time">
                                                    @iv.EndDate.Value.ToString("yyyy-MM-dd")<br />
                                                    <small class="text-muted">@iv.EndDate.Value.ToString("HH:mm")</small>
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not completed</span>
                                            }
                                        </td>

                                        <td>
                                            <span class="fw-semibold">@($"{iv.InterventionPrice:N3} TND")</span>
                                        </td>

                                        <td>
                                            <span class="badge bg-secondary text-light rounded-pill px-3 py-2" title="Intervention status">
                                                @iv.Status
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info mt-4">
                        <i class="bi bi-info-circle me-1"></i> No interventions recorded for this work order.
                    </div>
                }

                <!-- Actions -->
                <div class="text-center mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-general btn-sm me-2" title="Edit this work order">
                        <i class="fas fa-edit"></i> Edit Work Order
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-sm" title="Return to work order list">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>