@model IEnumerable<TimeTwoFix.Web.Models.WorkOrderModels.ReadWorkOrderViewModel>

@{
    ViewData["Title"] = "Work Orders";

    var groupedByStatus = Model?
        .GroupBy(w => w.Status)
        .OrderBy(g => g.Key)
        .ToList();
    var paidFilter = ViewBag.PaidFilter as string;
}

<div class="container my-5">
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="text-primary fw-bold mb-0">
                    <i class="bi bi-clipboard-check me-2"></i> Work Orders
                </h2>
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle me-1"></i> Create New
                </a>
            </div>

            <!-- TempData Alert -->
            @if (TempData["WorkOrderError"] != null)
            {
                <div class="alert alert-warning d-flex align-items-center mb-4" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <span>@TempData["WorkOrderError"]</span>
                </div>
            }

            <!-- Payment Filter Toggle -->
            <div class="btn-group mb-3" role="group">
                <a asp-action="FilterByPaymentStatus" asp-route-paid="true" class="btn @(paidFilter == "true" ? "btn-success" : "btn-outline-success")">
                    <i class="bi bi-check-circle me-1"></i> Paid
                </a>
                <a asp-action="FilterByPaymentStatus" asp-route-paid="false" class="btn @(paidFilter == "false" ? "btn-danger" : "btn-outline-danger")">
                    <i class="bi bi-x-circle me-1"></i> Unpaid
                </a>
                <a asp-action="FilterByPaymentStatus" class="btn @(string.IsNullOrEmpty(paidFilter) ? "btn-secondary" : "btn-outline-secondary")">
                    <i class="bi bi-list-ul me-1"></i> All
                </a>
            </div>

            <!-- Status Tabs -->
            @if (groupedByStatus != null && groupedByStatus.Any())
            {
                <ul class="nav nav-tabs" role="tablist">
                    @foreach (var group in groupedByStatus)
                    {
                        var statusId = group.Key.Replace(" ", "");
                        <li class="nav-item" role="presentation">
                            <button class="nav-link @(group == groupedByStatus.First() ? "active" : "")"
                                    id="@statusId-tab"
                                    data-bs-toggle="tab"
                                    data-bs-target="#@statusId"
                                    type="button"
                                    role="tab"
                                    aria-controls="@statusId"
                                    aria-selected="@(group == groupedByStatus.First())">
                                @group.Key (@group.Count())
                            </button>
                        </li>
                    }
                </ul>

                <div class="tab-content mt-3">
                    @foreach (var group in groupedByStatus)
                    {
                        var statusId = group.Key.Replace(" ", "");
                        <div class="tab-pane fade @(group == groupedByStatus.First() ? "show active" : "")"
                             id="@statusId"
                             role="tabpanel"
                             aria-labelledby="@statusId-tab">

                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>ID</th>
                                            <th>Vehicle</th>
                                            @* <th>Mileage</th> *@
                                            @* <th>Start</th>
                                            <th>End</th> *@
                                            <th>Labor Cost</th>
                                            <th>Status</th>
                                            <th>Paid</th>
                                            <th>Payment Date</th>
                                            @* <th>Notes</th> *@
                                            <th class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in group)
                                        {
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.VehicleViewModel.Vin</td>
                                                @* <td>@item.Mileage</td> *@
                                                @* <td>
                                                    <span class="text-nowrap">
                                                        @item.StartDate.ToString("yyyy-MM-dd")<br />
                                                        <small class="text-muted">@item.StartTime.ToString("hh\\:mm")</small>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="text-nowrap">
                                                        @item.EndDate.ToString("yyyy-MM-dd")<br />
                                                        <small class="text-muted">@item.EndTime.ToString("hh\\:mm")</small>
                                                    </span>
                                                </td> *@
                                                <td>@($"{item.TolalLaborCost:N3} TND")</td>
                                                <td><span class="badge bg-secondary">@item.Status</span></td>
                                                <td>
                                                    @if (item.Paid == true)
                                                    {
                                                        <span class="badge bg-success">
                                                            <i class="bi bi-check-circle me-1"></i> Paid
                                                        </span>
                                                    }
                                                    else if (item.Paid == false)
                                                    {
                                                        <span class="badge bg-danger">
                                                            <i class="bi bi-x-circle me-1"></i> Unpaid
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">
                                                            <i class="bi bi-question-circle me-1"></i> Unknown
                                                        </span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (item.PaymentDate.HasValue)
                                                    {
                                                        <span class="text-nowrap">@item.PaymentDate.Value.ToString("yyyy-MM-dd")</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">—</span>
                                                    }
                                                </td>
                                                @* <td>@item.Notes</td> *@
                                                <td class="text-center">
                                                    <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
                                                        @if (item.Paid == false)
                                                        {
                                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning text-white">
                                                                <i class="bi bi-pencil-square me-1"></i> Edit
                                                            </a>
                                                        }
                                                        
                                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info text-white">
                                                            <i class="bi bi-eye me-1"></i> View
                                                        </a>
                                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger text-white">
                                                            <i class="bi bi-trash me-1"></i> Delete
                                                        </a>
                                                        @if (item.Paid == false)
                                                        {
                                                            <a asp-action="CreateById" asp-controller="Intervention" asp-route-workOrderId="@item.Id" class="btn btn-outline-success">Add Intervention</a>
                                                        }
                                                        
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info text-center mt-4">
                    <i class="bi bi-info-circle me-1"></i> No work orders found.
                </div>
            }
        </div>
    </div>
</div>