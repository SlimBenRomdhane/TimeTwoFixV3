@model TimeTwoFix.Web.Models.SparePartCategoryModel.UpdateSparePartCategoryViewModel

@{
    ViewData["Title"] = "Edit Spare Part Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h2 class="text-primary fw-bold mb-4">
                <i class="bi bi-pencil-square me-2"></i> Edit Spare Part Category
            </h2>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input asp-for="Id" type="hidden" />
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label">Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6"></div>
                    <div class="col-12">
                        <label asp-for="Description" class="form-label">Description</label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <input asp-for="Notes" class="form-control" />
                        <span asp-validation-for="Notes" class="text-danger small"></span>
                    </div>
                </div>
                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-save me-1"></i> Save Changes
                    </button>
                </div>
            </form>
            <div class="d-grid mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-arrow-left-circle me-2"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
