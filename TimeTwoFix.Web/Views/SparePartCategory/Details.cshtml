@model TimeTwoFix.Web.Models.SparePartCategoryModel.ReadSparePartCategoryViewModel

@{
    ViewData["Title"] = "Spare Part Category Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h2 class="text-primary fw-bold mb-4">
                <i class="bi bi-tags me-2"></i> Spare Part Category Details
            </h2>
            <div class="row mb-4">
                <div class="col-md-6">
                    <label class="text-muted">Name</label>
                    <div class="fw-semibold">@Model.Name</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Description</label>
                    <div>@Model.Description</div>
                </div>
                <div class="col-md-12">
                    <label class="text-muted">Notes</label>
                    <div>@Model.Notes</div>
                </div>
            </div>
            <hr />
            <div class="row mb-4">
                <div class="col-md-6">
                    <label class="text-muted">Created At</label>
                    <div>@Model.CreatedAt</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Created By</label>
                    <div>@Model.CreatedBy</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Updated At</label>
                    <div>@Model.UpdatedAt</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Updated By</label>
                    <div>@Model.UpdatedBy</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Deleted At</label>
                    <div>@Model.DeletedAt</div>
                </div>
                <div class="col-md-6">
                    <label class="text-muted">Deleted By</label>
                    <div>@Model.DeletedBy</div>
                </div>
            </div>
            <div class="d-grid mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning btn-lg">
                    <i class="bi bi-pencil-square me-2"></i> Edit Category
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-arrow-left-circle me-2"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
