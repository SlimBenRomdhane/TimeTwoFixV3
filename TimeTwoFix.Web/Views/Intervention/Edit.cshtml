@model TimeTwoFix.Web.Models.InterventionModels.UpdateInterventionViewModel

@{
    ViewData["Title"] = "Edit Intervention";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h2 class="text-primary fw-bold mb-4">
                <i class="bi bi-pencil-square me-2"></i> Edit Intervention
            </h2>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="WorkOrderId" class="form-label">Work Order</label>
                        <input asp-for="WorkOrderId" class="form-control" />
                        <span asp-validation-for="WorkOrderId" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="MechanicId" class="form-label">Mechanic</label>
                        <input asp-for="MechanicId" class="form-control" />
                        <span asp-validation-for="MechanicId" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ServiceId" class="form-label">Service</label>
                        <input asp-for="ServiceId" class="form-control" />
                        <span asp-validation-for="ServiceId" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LiftingBridgeId" class="form-label">Lifting Bridge</label>
                        <input asp-for="LiftingBridgeId" class="form-control" />
                        <span asp-validation-for="LiftingBridgeId" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="StartDate" class="form-label">Start Date</label>
                        <input asp-for="StartDate" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="EndDate" class="form-label">End Date</label>
                        <input asp-for="EndDate" class="form-control" min="@Model.StartDate.ToString("yyyy-MM-ddTHH:mm")" />
                        <span asp-validation-for="EndDate" class="text-danger small"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Notes" class="text-danger small"></span>
                    </div>
                </div>
                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-save me-1"></i> Save Changes
                    </button>
                </div>
            </form>
            <div class="d-grid mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-arrow-left-circle me-2"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
