@model TimeTwoFix.Web.Models.InterventionModels.CreateInterventionViewModel
@{
    ViewData["Title"] = "Create Intervention";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <!-- Header -->
    <h2 class="section-title text-primary fw-bold mb-2">
        <i class="bi bi-tools me-2"></i> Create Intervention
    </h2>
    <p class="text-muted mb-4">
        Please fill in the intervention details. Fields marked with <span class="text-danger">*</span> are required.
    </p>
    <!-- Form Card -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="Create" class="needs-validation" novalidate>
                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <!-- Section: Intervention Info -->
                <div class="form-section mb-5">
                    <h5 class="form-section-header text-secondary mb-3">
                        <i class="bi bi-clipboard2-plus me-2"></i> Intervention Details
                    </h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="WorkOrderId" class="form-label">Work Order <span class="text-danger">*</span></label>
                            <select asp-for="WorkOrderId" class="form-select" asp-items="ViewBag.WorkOrder">
                                <option value="">-- Select Work Order --</option>
                            </select>
                            <span asp-validation-for="WorkOrderId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="MechanicId" class="form-label">Mechanic <span class="text-danger">*</span></label>
                            <select asp-for="MechanicId" class="form-select" asp-items="ViewBag.Mechanic">
                                <option value="">-- Select Mechanic --</option>
                            </select>
                            <span asp-validation-for="MechanicId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ServiceId" class="form-label">Service <span class="text-danger">*</span></label>
                            <select asp-for="ServiceId" class="form-select" asp-items="ViewBag.ProvidedService">
                                <option value="">-- Select Service --</option>
                            </select>
                            <span asp-validation-for="ServiceId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LiftingBridgeId" class="form-label">Lifting Bridge <span class="text-danger">*</span></label>
                            <select asp-for="LiftingBridgeId" class="form-select" asp-items="ViewBag.LiftingBridge">
                                <option value="">-- Select Lifting Bridge --</option>
                            </select>
                            <span asp-validation-for="LiftingBridgeId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="StartDate" class="form-label">Start Date <span class="text-danger">*</span></label>
                            <input asp-for="StartDate" class="form-control" type="datetime-local" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <label asp-for="Notes" class="form-label">Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Extra notes or hints (optional)"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <!-- Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-check-circle me-1"></i> Create Intervention
                    </button>
                </div>
            </form>
        </div>
    </div>
    <!-- Back Link -->
    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to Intervention List
        </a>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
